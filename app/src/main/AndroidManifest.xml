<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.arsylk.mammonsmite"
          android:screenOrientation="portrait">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:hardwareAccelerated="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:screenOrientation="portrait"
            android:supportsRtl="true"
            android:testOnly="false"
            android:theme="@style/Theme.AppCompat">

        <activity android:name="com.arsylk.mammonsmite.activities.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="file"/>
                <data android:scheme="content"/>
                <data android:mimeType="*/*"/>
                <data android:host="*"/>
                <data android:pathPattern=".*\\.pck"/>
                <data android:pathPattern=".*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\..*\\.pck"/>
            </intent-filter>
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.DCModelsActivity"
                android:label="Destiny Child Models">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.L2DPreviewActivity"
                android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.L2DModelsActivity"
                android:label="Unpacked Models">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.DCSwapActivity">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.OnlineModelsActivity"
                  android:enabled="@string/isSpecial"
                android:label="Online Models">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.DCWikiPageActivity"
                android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.WikiFragmentManagerActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar"
                  android:exported="true">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.LocaleTranslateActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="Locale Translate"
                android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.SettingsActivity">
        </activity>

        <activity android:name="com.arsylk.mammonsmite.activities.ExceptionActivity"
                android:excludeFromRecents="true"
                android:label="@string/activity_uncaught_exception"
                android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity android:name="com.arsylk.mammonsmite.activities.DCBannerWidgetConfigureActivity"
                  android:label="Event Banners">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver android:name="com.arsylk.mammonsmite.views.PickModelWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/pick_model_widget_info"/>
        </receiver>
        <receiver android:name="com.arsylk.mammonsmite.widgets.dcbanner.DCBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/dcbanner_widget_info"/>
        </receiver>

        <service android:name="com.arsylk.mammonsmite.widgets.dcbanner.DCBannerWidgetService"
                android:enabled="true"
                android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
        <service android:name="com.arsylk.mammonsmite.Live2D.LiveWallpaperService"
                android:label="Live2DService"
                android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <intent-filter>
                <action android:name="RANDOM_MODEL"/>
            </intent-filter>

            <meta-data
                    android:name="android.service.wallpaper"
                    android:resource="@xml/wallpaper"/>
        </service>
    </application>

</manifest>