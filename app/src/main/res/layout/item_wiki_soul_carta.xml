<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/wiki_soul_carta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:paddingTop="35dp"
                android:paddingBottom="35dp"/>

        <ImageView
                android:id="@+id/wiki_soul_carta_prisma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:paddingTop="35dp"
                android:paddingBottom="35dp"
                android:alpha="0.2"
                android:src="@drawable/overlay_prisma"/>

        <ImageView
                android:id="@+id/wiki_soul_carta_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame_soul_carta"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

            <com.arsylk.mammonsmite.views.OutlineTextView
                    android:id="@+id/wiki_soul_carta_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="17sp"
                    style="@style/shadowEffect"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <com.arsylk.mammonsmite.views.OutlineTextView
                    android:id="@+id/wiki_soul_carta_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    style="@style/shadowEffect"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5">

                        <com.arsylk.mammonsmite.views.OutlineTextView
                                android:id="@+id/wiki_soul_carta_stats_text_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|bottom"
                                android:textSize="14sp"
                                android:textColor="#ff6600"
                                android:textStyle="bold"
                                style="@style/shadowEffect"/>

                        <com.arsylk.mammonsmite.views.OutlineTextView
                                android:id="@+id/wiki_soul_carta_stats_value_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                style="@style/shadowEffect"/>

                    </FrameLayout>

                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="6" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5">

                        <com.arsylk.mammonsmite.views.OutlineTextView
                                android:id="@+id/wiki_soul_carta_stats_text_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|bottom"
                                android:textSize="14sp"
                                android:textColor="#ff6600"
                                android:textStyle="bold"
                                style="@style/shadowEffect"/>

                        <com.arsylk.mammonsmite.views.OutlineTextView
                                android:id="@+id/wiki_soul_carta_stats_value_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                style="@style/shadowEffect"/>

                    </FrameLayout>

                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="6"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/wiki_soul_carta_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/wiki_soul_carta_element_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:adjustViewBounds="true"/>

                <com.arsylk.mammonsmite.views.OutlineTextView
                        android:id="@+id/wiki_soul_carta_element"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        style="@style/shadowEffect"/>

                <ImageView
                        android:id="@+id/wiki_soul_carta_type_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:adjustViewBounds="true"/>

                <com.arsylk.mammonsmite.views.OutlineTextView
                        android:id="@+id/wiki_soul_carta_type"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        style="@style/shadowEffect"/>


            </LinearLayout>

            <com.arsylk.mammonsmite.views.OutlineTextView
                    android:id="@+id/wiki_soul_carta_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    style="@style/shadowEffect"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>