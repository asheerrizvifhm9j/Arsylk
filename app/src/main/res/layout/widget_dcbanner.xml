<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_frame_black_full_blue">

    <ImageView
            android:id="@+id/dcbanner_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

    <TextView
            android:id="@+id/dcbanner_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/dcbanner_image"
            android:layout_alignStart="@+id/dcbanner_image"
            android:layout_alignLeft="@+id/dcbanner_image"
            android:layout_alignEnd="@+id/dcbanner_image"
            android:layout_alignRight="@+id/dcbanner_image"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

</RelativeLayout>