<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/item_margin">

    <LinearLayout
            android:id="@+id/layout_online_model"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

        <!-- mod metadata layout -->
        <LinearLayout
                android:id="@+id/layout_mod_metadata"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <!-- mod title layout -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                <TextView
                        android:id="@+id/mod_tile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:lines="1"
                        style="@style/Base.TextAppearance.AppCompat.Title"/>

                <TextView
                        android:id="@+id/model_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:lines="1"/>

            </LinearLayout>
            <View android:background="#E0E0E0" android:layout_width="match_parent" android:layout_height="1dp"/>


            <TextView
                    android:id="@+id/mod_creator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="italic"/>

            <TextView
                    android:id="@+id/mod_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/model_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:lines="1"
                    android:alpha="0.5"
                    android:textSize="12sp"/>

        </LinearLayout>

        <!-- image preview layout -->
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp">

            <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd"
                    android:adjustViewBounds="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>