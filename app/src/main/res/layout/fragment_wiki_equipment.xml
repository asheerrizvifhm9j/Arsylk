<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wiki_fragment_equipment_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2f2f2f"
        android:fitsSystemWindows="false">

    <ListView
            android:id="@+id/wiki_fragment_equipment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
            android:id="@+id/wiki_fragment_equipment_navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="false"
            android:background="#D0000000"
            app:itemBackground="@android:color/transparent"
            app:itemTextColor="@drawable/navigation_item_textcolor"
            app:menu="@menu/wiki_equipment_menu"
            app:headerLayout="@layout/header_navigation_wiki">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
